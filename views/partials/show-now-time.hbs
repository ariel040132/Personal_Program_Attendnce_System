<script>
  window.addEventListener('DOMContentLoaded', () => {
    const dateElement = document.getElementById('date');
    const timeElement = document.getElementById('time');

    function updateDateTime() {
      const now = new Date();

      const options = { timeZone: 'Asia/Taipei', year: 'numeric', month: 'numeric', day: 'numeric', hour: 'numeric', minute: 'numeric', second: 'numeric' };

      const dateTimeString = now.toLocaleString('en-US', options);  // 取得當前日期與時間的字串
      const [dateString, timeString] = dateTimeString.split(', ');  // 將日期與時間拆分為字串

      dateElement.textContent = dateString;  // 更新日期顯示
      timeElement.textContent = timeString;  // 更新時間顯示
    }

    setInterval(updateDateTime, 1000);
  });
</script>

<p><i class="fa-solid fa-calendar-days"></i> Today：<span id="date"></span></p>
<p><i class="fa-solid fa-clock"></i> Time：<span id="time"></span></p>