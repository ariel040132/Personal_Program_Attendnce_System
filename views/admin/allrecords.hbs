<div class="event-schedule-area-two bg-color">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="section-title text-center">
          <div class="title-text">
            <h2>Clock In Records</h2>
          </div>
          <p>
            員工出勤紀錄表
          </p>
        </div>
      </div>
      <!-- /.col end-->
    </div>
    <!-- row end-->
    <div class="row">
      <div class="col-lg-12">
        <div class="tab-content" id="myTabContent">
          <div class="tab-pane fade active show" id="home" role="tabpanel">
            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th class="text-center" scope="col">Date</th>
                    <th scope="col">Employee</th>
                    <th scope="col">Work</th>
                    <th scope="col">Status</th>
                    <th class="text-center" scope="col">Edit</th>
                  </tr>
                </thead>
                <tbody>
                  {{!-- ! user 1 --}}
                  {{#each records}}
                  <tr class="inner-box">
                    <th scope="row">
                      <div class="event-date">
                        <p>{{this.date}}</p>
                      </div>
                    </th>
                    <td>
                      <div class="event-img">
                        <span>{{this.User.account}}</span>
                      </div>
                    </td>
                    <td>
                      <div class="event-wrap">
                        <h3><a href="#">{{this.workTitle}}</a></h3>
                        <div class="meta">
                          <div class="organizers">
                            <a href="#">{{this.punchInTime}}</a>
                          </div>
                          <div class="categories">
                            <a href="#">{{this.punchOutTime}}</a>
                          </div>
                          <div class="time">
                            <span>Work Hours: {{this.workHours}}</span>
                          </div>
                        </div>
                      </div>
                    </td>
                    <td>
                      <div class="r-no">
                        <span>{{this.isAttendance}}</span>
                      </div>
                    </td>
                    <td>
                      <div class="primary-btn">
                        <a class="btn btn-primary" href="#">Read More</a>
                      </div>
                    </td>
                  </tr>
                  {{/each}}
                  {{!-- ! user 2 --}}
                </tbody>
              </table>
            </div>
          </div>
          <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">

          </div>
          <!-- /col end-->
        </div>
        <!-- /row end-->
      </div>
    </div>
  </div>
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
</div>