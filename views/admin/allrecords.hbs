<div class="event-schedule-area-two bg-color">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">

        <div class="section-title text-center">
          <div class="title-text">
            <h2 class="mb-3">Admin</h2>

            {{> show-now-time}}
          </div>

        </div>

      </div>
      <!-- /.col end-->
    </div>
    <!-- row end-->
    <div class="row">
      <div class="col-lg-12">
        <div class="tab-content" id="myTabContent">
          <div class="tab-pane fade active show" id="home" role="tabpanel">
            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th class="text-center" scope="col">打卡者</th>
                    <th class="text-center" scope="col">工作內容</th>
                    <th class="text-center" scope="col">上班時間</th>
                    <th class="text-center" scope="col">下班時間</th>
                    <th scope="col">出勤狀態</th>
                    <th class="text-center" scope="col">清除缺勤狀態</th>
                  </tr>
                </thead>
                <tbody>
                  {{!-- ! user 1 --}}
                  {{#each records}}
                  <tr class="inner-box">
                    <th scope="row">
                      <div class="event-date">
                        <p>{{this.User.name}}</p>
                      </div>
                    </th>

                    <td>
                      <div class="event-wrap">
                        <h3><a href="#" style="text-decoration: none;">{{this.workTitle}}</a></h3>
                      </div>
                      <div class="time">
                        <span>work hours: {{this.workHours}}</span>
                      </div>
                    </td>
                    <td>
                      <div class="primary-btn">
                        <p>{{this.punchInTime}}</p>
                      </div>
                    </td>
                    <td>
                      <div class="primary-btn">
                        <p>{{this.punchOutTime}}</p>
                      </div>
                    </td>
                    <td>

                      <div class="r-no text-center">
                        {{#if this.isAttendance}}
                        <span><i class="fa-solid fa-check" style="color: rgb(10, 190, 10);"></i></span>
                        {{else}}
                        <span><i class="fa-solid fa-xmark" style="color: rgb(174, 9, 9);"></i></span>
                        {{/if}}
                      </div>
                    </td>
                    <td>
                      {{#if this.isAttendance}}
                      <p>已出勤</p>
                      {{else}}
                      <form action="/admin/attendances/{{this.id}}?_method=PATCH" method="POST"
                        style="display: inline;">
                        <input type="hidden" name="isAttendance" value="true" />
                        <button type="submit" class="btn link-success">清除缺勤狀態</button>
                      </form>
                      {{/if}}
                    </td>
                  </tr>
                  {{/each}}
                  {{!-- ! user 2 --}}
                </tbody>
              </table>
            </div>
          </div>
          <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">

          </div>
          <!-- /col end-->
        </div>
        <!-- /row end-->
      </div>
    </div>
  </div>
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
</div>