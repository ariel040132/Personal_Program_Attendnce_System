<div class="registration-form">
  <div class="form-icon">
    <span><i class="fa-solid fa-key"></i></span>
  </div>
  <form id="changePwdForm" action="/user/editPwd?_method=PUT" method="POST">
    <div class="form-group">
      <label for="inputPassword5" class="form-label">Password <span style="color: red;">*</span></label>
      <input type="text" class="form-control item" id="password" name="password" placeholder="password" required>
    </div>
    <div class="form-group">
      <label for="inputPassword5" class="form-label">Password Check <span style="color: red;">*</span></label>
      <input type="text" class="form-control item" id="checkpwd" name="checkpwd" placeholder="password check" required>
    </div>
    <button type="submit" class="btn btn-outline-dark">Save</button>
    <div class="mt-2">
      <a href="/user/home"><button type="button" class="btn btn-outline-dark">Back</button></a>
    </div>
  </form>



</div>