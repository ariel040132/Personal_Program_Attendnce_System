<div class="event-schedule-area-two bg-color">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="section-title text-center">
          <div class="title-text">
            <h2>your attendance records</h2>
            <div class="primary-btn mb-3">
              <a class="btn" href="/punchin"
                style="background-color: #D6CA98; color:aliceblue; border-radius: 25px;">clock
                in</a>
              <a class="btn" href="/punchout"
                style="background-color: #D6CA98; color:aliceblue; border-radius: 25px;">clock out</a>
            </div>
          </div>

        </div>
      </div>
      <!-- /.col end-->
    </div>
    <!-- row end-->
    <div class="row">
      <div class="col-lg-12">
        <div class="tab-content" id="myTabContent">
          <div class="tab-pane fade active show" id="home" role="tabpanel">
            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th class="text-center" scope="col">日期</th>
                    <th scope="col">工作內容</th>
                    <th class="text-center" scope="col">出勤狀態</th>
                    <th class="text-center" scope="col">編輯</th>
                  </tr>
                </thead>
                <tbody>
                  {{!-- ! user 1 --}}
                  {{#each records}}
                  <tr class="inner-box">
                    <th scope="row">
                      <div class="event-date">
                        <p>{{this.date}}</p>
                      </div>
                    </th>
                    <td>
                      <div class="event-wrap">
                        <h3><a href="#">{{this.workTitle}}</a></h3>
                        <div class="meta">
                          <div class="organizers">
                            <span><i class="fa-solid fa-building"></i> {{this.punchInTime}}</span>
                          </div>
                          <div class="categories">
                            <span><i class="fa-solid fa-home"></i> {{this.punchOutTime}}</span>
                          </div>
                          <div class="time">
                            <span>Work Hours: {{this.workHours}}</span>
                          </div>
                        </div>
                      </div>
                    </td>
                    <td>
                      <div class="r-no text-center">
                        {{#if this.isAttendance}}
                        <span><i class="fa-solid fa-check" style="color: rgb(10, 190, 10);"></i></span>
                        {{else}}
                        <span><i class="fa-solid fa-xmark" style="color: rgb(174, 9, 9);"></i></span>
                        {{/if}}
                      </div>
                    </td>
                    <td>
                      <div class="primary-btn">
                        <a class="btn" href="#" style="color: #000000; background-color:#AFC1D6">Read More</a>
                      </div>
                    </td>
                  </tr>
                  {{/each}}
                  {{!-- ! user 2 --}}
                </tbody>
              </table>
            </div>
          </div>
          <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">

          </div>
          <!-- /col end-->
        </div>
        <!-- /row end-->
      </div>
    </div>
  </div>
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
</div>